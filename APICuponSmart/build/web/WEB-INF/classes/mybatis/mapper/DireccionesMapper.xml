<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="direccion">
    <select id="mostrarDireccionPorId" resultType="modelo.pojo.Direccion" parameterType="int">
        SELECT * 
        FROM direcciones 
        WHERE idDireccion=#{idDireccion}
    </select>

    <insert id="registrarDireccion" parameterType="modelo.pojo.Direccion">
        INSERT INTO direcciones 
        (Calle, Numero, codigoPostal, ciudad, colonia) 
        VALUES 
        (#{calle}, #{numero}, #{codigoPostal}, #{ciudad}, #{colonia})
    </insert>

    <update id="editarDireccion" parameterType="modelo.pojo.Direccion">
        UPDATE direcciones 
        SET Calle=#{calle}, Numero=#{numero}, codigoPostal=#{codigoPostal}, ciudad=#{ciudad}, colonia=#{colonia}
        WHERE idDireccion=#{idDireccion}
    </update>

    <delete id="eliminarDireccion" parameterType="int">
        DELETE FROM direcciones
        WHERE idDireccion=#{idDireccion}
    </delete>

    <select id="obtenerTodasDirecciones" resultType="modelo.pojo.Direccion">
        SELECT * 
        FROM direcciones
    </select>
</mapper>
